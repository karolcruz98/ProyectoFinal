<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectofinal.students.dashboard">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="38dp"
    tools:layout_editor_absoluteY="84dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:onClick="showGraphs"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/test" />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="190dp"
                android:layout_height="145dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:onClick="showTest"
                android:text="encuesta"
                android:textColor="#fff"
                tools:text="Encuesta COVID-19" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:onClick="showAlarms"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="335dp"
                android:layout_weight="1"
                android:onClick="showAlarms"
                app:srcCompat="@drawable/clase" />

            <Button
                android:id="@+id/btnStream"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="188dp"
                android:layout_height="236dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:onClick="showInfoCl"
                android:text="clases"
                android:textColor="#fff"
                tools:text="Clases Stream" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="showSettings"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/gps" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="190dp"
                android:layout_height="268dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:onClick="showGPS"
                android:text="gps"
                android:textColor="#fff"
                tools:text="Ubicaciones" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="showAbout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/codigo" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="190dp"
                android:layout_height="268dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:textColor="#fff"
                android:onClick="showAsist"
                android:text="asistencia"
                tools:text="Asistencia" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
