<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#eee9e9"
tools:ignore="Deprecated">

    <View
        android:id="@+id/view"
        android:layout_width="421dp"
        android:layout_height="126dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="#FF0000" />

    <CheckBox
        android:id="@+id/chb6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_x="52dp"
        android:layout_y="448dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Decaimiento y/o fátiga"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chb7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_x="64dp"
        android:layout_y="511dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Ninguno"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_x="47dp"
        android:layout_y="384dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Disminucion del sentido del olfato y/o gusto"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chb4"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_x="50dp"
        android:layout_y="322dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Dolor de garganta y/o tos"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chb3"
        android:layout_width="257dp"
        android:layout_height="49dp"
        android:layout_marginLeft="100dp"
        android:layout_x="49dp"
        android:layout_y="258dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Dificultad para respirar"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chb2"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_x="50dp"
        android:layout_y="201dp"
        android:onClick="onCheckboxClicked"
        android:padding="10dp"
        android:text="Fiebre de 38°C o más"
        android:textColor="#000000" />

    <Button
        android:id="@+id/getBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_x="147dp"
        android:layout_y="554dp"
        android:text="Enviar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="49dp"
        android:text="Autodiagnóstico del COVID- 19"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chb1"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="149dp"
        android:textSize="15dp"
        android:text="¿Has presentado alguno de estos síntomas recientemente (en los últimos 14 días) ? "
        android:textColor="#000000" />

</AbsoluteLayout>